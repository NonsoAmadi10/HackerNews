<section class="container md:mx-auto">
<nav class="font-sans flex flex-col text-center content-center sm:flex-row sm:text-left sm:justify-between py-2 px-6 bg-white  sm:items-baseline w-full">

  <div class="mb-2 sm:mb-0 flex flex-row
  ">
    <div>
      <h2  class="text-md uppercase text-blue-500 hover:text-indigo-500 font-sans font-bold"></h2><br>
    </div>
  </div>

  <div class="sm:mb-0 self-center">
    <!-- <div class="h-10" style="display: table-cell, vertical-align: middle;"> -->
     <%= link_to "New Community", new_community_path, class:"px-3 py-2 mt-3 text-md font-semibold rounded-md btn-secondary hover:bg-indigo-600  focus:outline-none focus:shadow-outline" %>

  </div>
</nav> <br>

<div class="w-full h-full max-w-screen-xl mx-auto p-6">
  <div class="relative h-full  w-full rounded overflow-hidden  mb-8 bg-white">
    <div class="w-full">
      <div class="bg-white border border-b mx-auto max-w-md shadow-2xl rounded-lg overflow-hidden">
        <div class="sm:flex sm:items-center px-4 py-4">
          <div class="flex-grow">
            <h3 class="font-normal px-2 py-3 leading-relaxed text-indigo-400">#AllCommunities</h3>
            <input type="text" placeholder="Search Communities"
              class="my-2 w-full text-sm bg-grey-100 text-grey-900 rounded h-10 p-3" />
            <div class="w-full">
            <% @community.each do |community| %>
              <div class="flex cursor-pointer my-1 hover:bg-blue-100 rounded">
                <div class="w-8 h-10 text-center py-1">
                  <p class="text-3xl p-0 text-green-200">&bull;</p>
                </div>
                <div class="w-4/5 h-10 py-3 px-1">
                  <p class="hover:text-blue-700"><%= link_to "#{community.name}", community_path(community.id) %></p>
                </div>
                <div class="w-1/5 h-10 text-right p-3">
                  <p class="text-sm text-grey-800">Member</p>
                </div>
              </div>
              
              <%end %> 
               
                
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

</section>