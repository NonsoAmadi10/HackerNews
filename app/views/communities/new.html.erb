<section class="bg-blue-200 min-h-screen flex flex-col">
<div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
<div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
<h2 class="mb-8 text-2xl text-center"> Create a new Community </h2>

    <%= simple_form_for @community, :url=> communities_path do |f| %>
  <%= f.input :name, label: 'Name',  placeholder: 'e.g #Rails', hint: "Keep it with a little bit of swag!",hint_html: { class: 'py-1 px-1 text-green-400' }, input_html: { class: 'block border border-grey-light w-full p-3 rounded mb-4 focus:outline-none focus:ring focus:border-blue-300 ' }, label_html: {class: "leading-loose font-sans mb-4"}  %> <br>
 
  <%= f.button :submit ,'Create' , class: "w-full text-center py-3 rounded btn-green shadow text-white hover:bg-blue-800 focus:outline-none my-1 mt-3" %>
<% end %>

</div>
 </div>
</section>