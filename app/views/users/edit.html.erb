<section class="bg-gray-100 min-h-screen flex flex-col">
<div class="container  mx-auto  flex flex-col md:h-full  justify-center px-2">
<h2 class="mb-8 text-3xl text-center py-6"> Edit Profile Info</h2>

    <div class="md:flex no-wrap md:-mx-2 ">

            <div class="w-full md:w-3/12 h-full md:mx-2">
            <!-- Profile Card -->
                <div class="bg-white shadow-2xl p-3 border-t-4 ">
                    <div class="image overflow-hidden">
                       <% if @user.pic? %>
                       <%=   image_tag(@user.pic.url, alt: 'Profile', class: 'h-auto w-full mx-auto') %>
                       <% else %>
                       
                       <%= gravatar_image_tag(@user.email, :alt => 'Michael Deering', :class=>'h-auto w-full mx-auto')%>

                       <% end %>
                    </div>
                </div>
            </div>

        <div class="w-full md:w-9/12 mx-2 h-64">
            <div class="bg-white px-6 py-8 rounded shadow-2xl text-black w-11/12">

                <%= render 'form', user: @user%>
            </div>
        </div>
            
    </div>

</div>
</section>