<section class="mt-5 flex justify-center flex-col items-center">
<div class="container mx-auto">
<div class="flex justify-between">
<h1 class="text-6xl text-blue-700 py-4"> <%= @whistle.title%></h1>

<div class="flex justify-between">
                            <%= link_to like_whistle_path(@whistle), method: :put, class: " h-4 text-indigo-500 m-2" do %>
      <i class="fa fa-thumbs-up" aria-hidden="true"></i>
      Like
      <%= @whistle.get_upvotes.size %>
      <% end %>

      <%= link_to dislike_whistle_path(@whistle), method: :put, class: "h-4 text-indigo-500 m-2" do %>
    <i class="fa fa-thumbs-down" aria-hidden="true"></i>
      Dislike
      <%= @whistle.get_downvotes.size %>
       <% end %>
</div>
</div>
<hr class="w-full">
<p class="px-5 py-4"> <%= @whistle.content%> </p>
</div>
</section>

